<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>info.flex-mojos</groupId>
		<artifactId>mojo</artifactId>
		<version>2.0M10-SNAPSHOT</version>
	</parent>

	<artifactId>test-harness</artifactId>

	<name>Flex Mojos Integration Tests</name>

	<properties>
		<maven-version>${maven.version}</maven-version>
		<fake-maven>${project.build.directory}/apache-maven-${maven-version}</fake-maven>
		<fake-repo>${project.build.directory}/local-repository</fake-repo>
		<sources>${project.build.directory}/sources</sources>

		<asdoc-mojo>${fake-repo}/info/flex-mojos/asdoc-mojo/${pom.version}/asdoc-mojo-${pom.version}.jar</asdoc-mojo>
		<flex-compiler-mojo>${fake-repo}/info/flex-mojos/flex-compiler-mojo/${pom.version}/flex-compiler-mojo-${pom.version}.jar</flex-compiler-mojo>
		<encrypter-mojo>${fake-repo}/info/flex-mojos/encrypter-mojo/${pom.version}/encrypter-mojo-${pom.version}.jar</encrypter-mojo>
		<html-wrapper-mojo>${fake-repo}/info/flex-mojos/html-wrapper-mojo/${pom.version}/html-wrapper-mojo-${pom.version}.jar</html-wrapper-mojo>
		<install-mojo>${fake-repo}/info/flex-mojos/install-mojo/${pom.version}/install-mojo-${pom.version}.jar</install-mojo>
		<optimizer-mojo>${fake-repo}/info/flex-mojos/optimizer-mojo/${pom.version}/optimizer-mojo-${pom.version}.jar</optimizer-mojo>
		<source-mojo>${fake-repo}/info/flex-mojos/source-mojo/${pom.version}/source-mojo-${pom.version}.jar</source-mojo>
	</properties>

	<build>

		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
				<filtering>false</filtering>
				<excludes>
					<exclude>**/*.properties</exclude>
				</excludes>
			</testResource>
		</testResources>

		<plugins>
			<plugin>
				<groupId>org.sonatype.plugins</groupId>
				<artifactId>maven-properties-plugin</artifactId>
				<version>0.0.1-SNAPSHOT</version>
				<executions>
					<execution>
						<phase>process-test-resources</phase>
						<goals>
							<goal>filter-file</goal>
						</goals>
						<configuration>
							<in>src/test/resources/baseTest.properties</in>
							<outDir>${build.testOutputDirectory}/</outDir>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.1-SNAPSHOT</version>
				<executions>
					<execution>
						<id>extract-maven</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.apache.maven</groupId>
									<artifactId>apache-maven</artifactId>
									<version>${maven.version}</version>
									<type>tar.gz</type>
									<classifier>bin</classifier>
								</artifactItem>
							</artifactItems>
							<outputDirectory>${project.build.directory}</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>copy-emma</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<includeArtifactIds>emma</includeArtifactIds>
							<outputDirectory>${fake-maven}/lib</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>copy-repo</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${fake-repo}</outputDirectory>
							<useRepositoryLayout>true</useRepositoryLayout>
							<generateRepositoryMetadatas>true</generateRepositoryMetadatas>
							<silent>true</silent>
							<copyPom>true</copyPom>
						</configuration>
					</execution>
					<execution>
						<id>copy-sources</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<classifier>sources</classifier>
							<excludeTransitive>true</excludeTransitive>
							<outputDirectory>${sources}</outputDirectory>
							<silent>true</silent>
							<failOnMissingClassifierArtifact>false</failOnMissingClassifierArtifact>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.sonatype.maven.plugin</groupId>
				<artifactId>emma4it-maven-plugin</artifactId>
				<version>1.0</version>
				<configuration>
					<jarFiles>
						<jarFile>${asdoc-mojo}</jarFile>
						<jarFile>${flex-compiler-mojo}</jarFile>
						<jarFile>${encrypter-mojo}</jarFile>
						<jarFile>${html-wrapper-mojo}</jarFile>
						<jarFile>${install-mojo}</jarFile>
						<jarFile>${optimizer-mojo}</jarFile>
						<jarFile>${source-mojo}</jarFile>
					</jarFiles>
					<searchPath>${project.build.directory}/projects</searchPath>
					<sourceFolders>
						<sourceFolder>${sources}</sourceFolder>
					</sourceFolders>
				</configuration>
			</plugin>
		</plugins>
	</reporting>

	<dependencies>

		<dependency>
			<groupId>emma</groupId>
			<artifactId>emma</artifactId>
			<version>2.0.5312</version>
		</dependency>
		<!--
			<dependency> <groupId>junit</groupId> <artifactId>junit</artifactId>
			</dependency>
		-->
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<classifier>jdk15</classifier>
		</dependency>

		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.maven.shared</groupId>
			<artifactId>maven-verifier</artifactId>
			<version>1.2-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>info.flex-mojos</groupId>
			<artifactId>asdoc-mojo</artifactId>
			<version>${pom.version}</version>
			<type>maven-plugin</type>
		</dependency>
		<dependency>
			<groupId>info.flex-mojos</groupId>
			<artifactId>flex-compiler-mojo</artifactId>
			<version>${pom.version}</version>
			<type>maven-plugin</type>
		</dependency>
		<dependency>
			<groupId>info.flex-mojos</groupId>
			<artifactId>encrypter-mojo</artifactId>
			<version>${pom.version}</version>
			<type>maven-plugin</type>
		</dependency>
		<dependency>
			<groupId>info.flex-mojos</groupId>
			<artifactId>generator-mojo</artifactId>
			<version>${pom.version}</version>
			<type>maven-plugin</type>
		</dependency>
		<dependency>
			<groupId>info.flex-mojos</groupId>
			<artifactId>html-wrapper-mojo</artifactId>
			<version>${pom.version}</version>
			<type>maven-plugin</type>
		</dependency>
		<dependency>
			<groupId>info.flex-mojos</groupId>
			<artifactId>install-mojo</artifactId>
			<version>${pom.version}</version>
			<type>maven-plugin</type>
		</dependency>
		<dependency>
			<groupId>info.flex-mojos</groupId>
			<artifactId>optimizer-mojo</artifactId>
			<version>${pom.version}</version>
			<type>maven-plugin</type>
		</dependency>
		<dependency>
			<groupId>info.flex-mojos</groupId>
			<artifactId>source-mojo</artifactId>
			<version>${pom.version}</version>
			<type>maven-plugin</type>
		</dependency>
		<dependency>
			<groupId>info.flex-mojos</groupId>
			<artifactId>mojo</artifactId>
			<version>${pom.version}</version>
			<type>pom</type>
		</dependency>
		<dependency>
			<groupId>info.flex-mojos</groupId>
			<artifactId>flex-super-pom</artifactId>
			<version>${pom.version}</version>
			<type>pom</type>
		</dependency>
		<dependency>
			<groupId>info.flex-mojos</groupId>
			<artifactId>air-super-pom</artifactId>
			<version>${pom.version}</version>
			<type>pom</type>
		</dependency>
		<dependency>
			<groupId>info.flex-mojos</groupId>
			<artifactId>testing-support</artifactId>
			<version>${pom.version}</version>
			<type>swc</type>
		</dependency>
	</dependencies>

</project>
