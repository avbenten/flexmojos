<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>info.flex-mojos</groupId>
		<artifactId>mojo</artifactId>
		<version>2.0M8-SNAPSHOT</version>
	</parent>

	<artifactId>super-poms</artifactId>

	<packaging>pom</packaging>
	<name>Super poms installer</name>
	<description>Work around to get super poms installed/deployed automatically</description>

	<build>
		<resources>
			<resource>
				<directory>${basedir}/src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>resources</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		
			<!-- Work around to get super poms installed automatically -->
			<plugin>
				<artifactId>maven-install-plugin</artifactId>
				<executions>
					<execution>
						<id>air-super-pom</id>
						<phase>install</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<file>${project.build.outputDirectory}/air.pom</file>
							<groupId>info.flex-mojos</groupId>
							<artifactId>air-super-pom</artifactId>
							<version>${pom.version}</version>
							<packaging>pom</packaging>
						</configuration>
					</execution>
					<execution>
						<id>flex-super-pom</id>
						<phase>install</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<file>${project.build.outputDirectory}/flex.pom</file>
							<groupId>info.flex-mojos</groupId>
							<artifactId>flex-super-pom</artifactId>
							<version>${pom.version}</version>
							<packaging>pom</packaging>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- Work around to get super poms deployed automatically -->
			<plugin>
				<artifactId>maven-deploy-plugin</artifactId>
				<executions>
					<execution>
						<id>air-super-pom</id>
						<phase>deploy</phase>
						<goals>
							<goal>deploy-file</goal>
						</goals>
						<configuration>
							<file>${project.build.outputDirectory}/air.pom</file>
							<pomFile>${project.build.outputDirectory}/air.pom</pomFile>
							<repositoryId>${deploy.repository.id}</repositoryId>
							<url>${deploy.repository.url}</url>
						</configuration>
					</execution>
					<execution>
						<id>flex-super-pom</id>
						<phase>deploy</phase>
						<goals>
							<goal>deploy-file</goal>
						</goals>
						<configuration>
							<file>${project.build.outputDirectory}/flex.pom</file>
							<pomFile>${project.build.outputDirectory}/flex.pom</pomFile>
							<repositoryId>${deploy.repository.id}</repositoryId>
							<url>${deploy.repository.url}</url>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>