<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.flexmojos</groupId>
    <artifactId>flexmojos-testing</artifactId>
    <version>3.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>flexmojos-test-harness</artifactId>

  <name>Flexmojos Integration Tests</name>

  <properties>
    <maven-version>${maven.version}</maven-version>
    <fake-maven>${project.build.directory}/apache-maven-${maven-version}</fake-maven>
    <fake-repo>${project.build.directory}/local-repository</fake-repo>
    <sources>${project.build.directory}/sources</sources>

    <flexmojos-maven-plugin>${fake-repo}/org/sonatype/flexmojos/flexmojos-maven-plugin/${pom.version}/flexmojos-maven-plugin-${pom.version}.jar
    </flexmojos-maven-plugin>
  </properties>

  <build>

    <testResources>
      <testResource>
        <directory>src/test/resources</directory>
        <filtering>false</filtering>
        <excludes>
          <exclude>**/*.properties</exclude>
        </excludes>
      </testResource>
      <testResource>
        <directory>src/test/resources</directory>
        <filtering>false</filtering>
        <includes>
          <include>settings.xml</include>
        </includes>
        <targetPath>${fake-maven}/conf</targetPath>
      </testResource>
    </testResources>

    <plugins>
      <plugin>
        <groupId>org.sonatype.plugins</groupId>
        <artifactId>maven-properties-plugin</artifactId>
        <version>0.0.1</version>
        <executions>
          <execution>
            <phase>process-test-resources</phase>
            <goals>
              <goal>filter-file</goal>
            </goals>
            <configuration>
              <in>src/test/resources/baseTest.properties</in>
              <outDir>${build.testOutputDirectory}/</outDir>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.1</version>
        <executions>
          <execution>
            <id>extract-maven</id>
            <phase>generate-test-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.apache.maven</groupId>
                  <artifactId>apache-maven</artifactId>
                  <version>${maven.version}</version>
                  <type>tar.gz</type>
                  <classifier>bin</classifier>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${project.build.directory}</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>copy-emma</id>
            <phase>generate-test-resources</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <includeArtifactIds>emma</includeArtifactIds>
              <outputDirectory>${fake-maven}/lib</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>copy-bundle</id>
            <phase>generate-test-resources</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <includeArtifactIds>bundle</includeArtifactIds>
              <outputDirectory>${project.build.directory}</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>copy-repo</id>
            <phase>generate-test-resources</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <excludeGroupIds>com.adobe.flex.framework,com.adobe.flex.compiler</excludeGroupIds>
              <outputDirectory>${fake-repo}</outputDirectory>
              <useRepositoryLayout>true</useRepositoryLayout>
              <generateRepositoryMetadatas>true</generateRepositoryMetadatas>
              <silent>true</silent>
              <copyPom>true</copyPom>
            </configuration>
          </execution>
          <execution>
            <id>copy-sources</id>
            <phase>generate-test-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <classifier>sources</classifier>
              <excludeTransitive>true</excludeTransitive>
              <outputDirectory>${sources}</outputDirectory>
              <silent>true</silent>
              <failOnMissingClassifierArtifact>false</failOnMissingClassifierArtifact>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.sonatype.plugins</groupId>
        <artifactId>bundle-publisher-maven-plugin</artifactId>
        <version>1.1</version>
        <executions>
          <execution>
            <id>compiler</id>
            <phase>generate-test-resources</phase>
            <goals>
              <goal>deploy-bundle</goal>
            </goals>
            <configuration>
              <descriptor>${basedir}/src/test/resources/${flex.sdk.version}/compiler-descriptor.xml</descriptor>
            </configuration>
          </execution>
          <execution>
            <id>framework</id>
            <phase>generate-test-resources</phase>
            <goals>
              <goal>deploy-bundle</goal>
            </goals>
            <configuration>
              <descriptor>${basedir}/src/test/resources/${flex.sdk.version}/framework-descriptor.xml</descriptor>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <bundle>${project.build.directory}/bundle-${flex.sdk.version}.zip</bundle>
          <url>file://${fake-repo}</url>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <properties>
            <property>
              <name>listener</name>
              <value>org.sonatype.flexmojos.test.ProgressListener</value>
            </property>
          </properties>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.sonatype.maven.plugin</groupId>
        <artifactId>emma4it-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>instrument</goal>
            </goals>
            <configuration>
              <jarFiles>
                <jarFile>${flexmojos-maven-plugin}</jarFile>
              </jarFiles>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

  <dependencies>

    <dependency>
      <groupId>emma</groupId>
      <artifactId>emma</artifactId>
      <version>2.1.5320</version>
    </dependency>
    <dependency>
      <groupId>org.testng</groupId>
      <artifactId>testng</artifactId>
      <classifier>jdk15</classifier>
    </dependency>

    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.maven.shared</groupId>
      <artifactId>maven-verifier</artifactId>
      <version>1.2-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>org.sonatype.flexmojos</groupId>
      <artifactId>flexmojos-maven-plugin</artifactId>
      <version>${pom.version}</version>
      <type>maven-plugin</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.flexmojos</groupId>
      <artifactId>flexmojos-parent</artifactId>
      <version>${pom.version}</version>
      <type>pom</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.flexmojos</groupId>
      <artifactId>flexmojos-sandbox</artifactId>
      <version>${pom.version}</version>
      <type>pom</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.flexmojos</groupId>
      <artifactId>flexmojos-archetypes</artifactId>
      <version>${pom.version}</version>
      <type>pom</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.flexmojos</groupId>
      <artifactId>flexmojos-archetypes-application</artifactId>
      <version>${pom.version}</version>
    </dependency>
    <dependency>
      <groupId>org.sonatype.flexmojos</groupId>
      <artifactId>flexmojos-archetypes-library</artifactId>
      <version>${pom.version}</version>
    </dependency>
    <dependency>
      <groupId>org.sonatype.flexmojos</groupId>
      <artifactId>flexmojos-archetypes-modular-webapp</artifactId>
      <version>${pom.version}</version>
    </dependency>

    <dependency>
      <groupId>org.sonatype.flexmojos</groupId>
      <artifactId>flexmojos-flex-super-pom</artifactId>
      <version>${pom.version}</version>
      <type>pom</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.flexmojos</groupId>
      <artifactId>flexmojos-air-super-pom</artifactId>
      <version>${pom.version}</version>
      <type>pom</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.flexmojos</groupId>
      <artifactId>flexmojos-super-pom-commons</artifactId>
      <version>${pom.version}</version>
      <type>pom</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.flexmojos</groupId>
      <artifactId>flexmojos-unittest-support</artifactId>
      <version>${pom.version}</version>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.flexmojos</groupId>
      <artifactId>flexmojos-testing</artifactId>
      <version>${pom.version}</version>
      <type>pom</type>
    </dependency>
    <dependency>
      <groupId>com.adobe.flex.compiler</groupId>
      <artifactId>bundle</artifactId>
      <version>${flex.sdk.version}</version>
      <type>zip</type>
    </dependency>
  </dependencies>

</project>
